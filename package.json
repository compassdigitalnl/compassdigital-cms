    "@stripe/stripe-js": "^4.0.0",
    "@upstash/redis": "^1.36.2",
    "@vercel/og": "^0.8.6",
    "better-sqlite3": "^12.6.2",
    "bullmq": "^5.67.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^8.2.0",
    "embla-carousel-auto-scroll": "^8.1.5",
    "embla-carousel-react": "^8.5.2",
    "geist": "^1.3.0",
    "graphql": "^16.8.2",
    "ioredis": "^5.9.2",
    "jsonwebtoken": "9.0.1",
    "lucide-react": "^0.563.0",
    "next": "^15.5.12",
    "next-themes": "0.4.6",
    "openai": "^6.18.0",
    "p-limit": "^7.3.0",
    "p-queue": "^9.1.0",
    "p-retry": "^7.1.1",
    "payload": "^3.75.0",
