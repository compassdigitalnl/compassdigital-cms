{
  "name": "payload-business-website",
  "version": "1.0.0",
  "description": "Business website template for Payload with Layout Builder",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prebuild_disabled": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/pre-build-check.ts",
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=2048\" next build",
    "migrate": "cross-env NODE_OPTIONS=\"--no-deprecation\" payload migrate",
    "pre-build-check": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/pre-build-check.ts",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev -p 3020",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "seed:demo": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/seed-demo.ts",
    "seed:plastimed": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/seed-plastimed.ts",
    "seed:plastimed-full": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/seed-plastimed-full.ts",
    "provision:plastimed": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/provision-plastimed.ts",
    "publish:pages": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/publish-pages.ts",
    "delete:pages": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/delete-all-pages.ts",
    "validate-env": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/validate-env.ts",
    "setup": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/setup-wizard.ts",
    "verify-setup": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/verify-setup.ts",
    "test:generator": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/test-site-generator.ts",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "stripe-webhooks": "stripe listen --forward-to localhost:3000/api/stripe/webhooks",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" playwright test --config=playwright.config.ts",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "_comment_deploy": "NOTE: Vercel deployment scripts below are DISABLED - Site now runs on Ploi/Hetzner. Deploy via Ploi dashboard or git push.",
    "deploy:vercel": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/deploy.ts production",
    "deploy:vercel:staging": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/deploy.ts staging",
    "deploy:vercel:verify": "cross-env NODE_OPTIONS=\"--no-deprecation --import=tsx/esm\" tsx src/scripts/deploy.ts verify",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop payload-app",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:logs": "pm2 logs payload-app",
    "pm2:status": "pm2 list",
    "pm2:save": "pm2 save",
    "pm2:delete": "pm2 delete payload-app"
  },
  "dependencies": {
    "@multisafepay/api-wrapper": "^1.0.1",
    "@payloadcms/admin-bar": "^3.75.0",
    "@payloadcms/db-mongodb": "^3.75.0",
